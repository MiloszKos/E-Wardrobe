<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/wardrobe_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Wardrobe"
    android:background="@drawable/background1"
    >
    <TextView
        android:id="@+id/filtered"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:textSize="16dp"
        android:text="Filtruj:" />
    <Spinner
        android:id="@+id/category_filtr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:layout_toRightOf="@id/filtered"/>

    <androidx.recyclerview.widget.RecyclerView


        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:layout_marginBottom="20dp"
        android:layout_below="@id/category_filtr"/>

    <Button
        android:id="@+id/camera"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@id/list"
        android:layout_below="@id/list"
        android:text="Aparat" />

    <Button
        android:id="@+id/gallery"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_below="@id/list"
        android:layout_alignRight="@id/list"
        android:text="Galeria" />




</RelativeLayout>


